<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucaz97.tictactoe.MainActivityTic"
    android:background="#13131e"
    android:id="@+id/mainLayout">

    <Button
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:text="Play vs AI"
        android:id="@+id/buttAI"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:padding="13dp"
        android:textAllCaps = "false" />

    <Button
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:text="Play vs Friend"
        android:id="@+id/buttPly"
        android:textSize="30sp"
        android:padding="13dp"
        android:textAllCaps="false"
        android:layout_below="@+id/buttAI"
        android:layout_alignLeft="@+id/buttAI"
        android:layout_alignStart="@+id/buttAI"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:text="Settings"
        android:id="@+id/buttSett"
        android:textSize="30sp"
        android:padding="13dp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttPly"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
